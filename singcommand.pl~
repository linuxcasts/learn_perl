use strict;
use warnings;
use utf8;

my	$words="hello this is a perl test";
my	$lengths=length $words;
print "perl is good at oneline command\n" if $lengths>15;
print "oh sorry\n" unless $lengths < 0;

my	@array=qw/red yellow white black/;
print join "==",map{uc $_} @array."\n";
print join " is not ", grep{length $_ == 5} @array."\n";
print scalar grep{$_ eq "black"} @array."\n"






